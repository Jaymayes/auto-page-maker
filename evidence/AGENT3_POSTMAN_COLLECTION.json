    {
      "name": "Security Headers Test",
      "item": [
        {
          "name": "Verify X-Robots-Tag (Staging)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Check response headers for X-Robots-Tag: noindex, nofollow, noarchive"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"X-Robots-Tag header present\", function () {",
                  "    pm.response.to.have.header(\"X-Robots-Tag\");",
                  "});",
                  "",
                  "pm.test(\"X-Robots-Tag contains noindex\", function () {",
                  "    var robotsTag = pm.response.headers.get(\"X-Robots-Tag\");",
                  "    pm.expect(robotsTag).to.include(\"noindex\");",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Verify Security Headers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Verify all 6 required security headers are present"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Strict-Transport-Security header\", function () {",
                  "    pm.response.to.have.header(\"Strict-Transport-Security\");",
                  "});",
                  "",
                  "pm.test(\"X-Content-Type-Options header\", function () {",
                  "    pm.response.to.have.header(\"X-Content-Type-Options\");",
                  "});",
                  "",
                  "pm.test(\"Referrer-Policy header\", function () {",
                  "    pm.response.to.have.header(\"Referrer-Policy\");",
                  "});",
                  "",
                  "pm.test(\"Permissions-Policy header\", function () {",
                  "    pm.response.to.have.header(\"Permissions-Policy\");",
                  "});",
                  "",
                  "pm.test(\"Content-Security-Policy header\", function () {",
                  "    pm.response.to.have.header(\"Content-Security-Policy\");",
                  "});",
                  "",
                  "pm.test(\"X-Frame-Options header\", function () {",
                  "    pm.response.to.have.header(\"X-Frame-Options\");",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
