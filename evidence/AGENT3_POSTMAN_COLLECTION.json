    {
      "name": "Performance Tests",
      "item": [
        {
          "name": "Stats API - Cache Performance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/scholarships/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scholarships", "stats"]
            },
            "description": "Test stats API caching. First call: MISS, subsequent calls: HIT (<50ms target)"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Response time is acceptable\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(600); // 600ms max",
                  "});",
                  "",
                  "pm.test(\"X-Cache header present\", function () {",
                  "    pm.response.to.have.header(\"X-Cache\");",
                  "});",
                  "",
                  "console.log(\"Cache Status:\", pm.response.headers.get(\"X-Cache\"));",
                  "console.log(\"Response Time:\", pm.response.responseTime + \"ms\");"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
