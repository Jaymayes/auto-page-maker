  "sev_level": "SEV-1",
  "restart_sequence": ["A7", "A8", "A1", "A3", "A2", "A4", "A5", "A6"],
  "per_app_steps": {
    "step_1_quiesce": {
      "capture_logs_seconds": 30,
      "record": ["pid", "commit_sha", "build_artifact_sha", "manifest_digest"],
      "capture_file_descriptors": true
    },
    "step_2_hard_stop": {
      "kill_signal": "SIGKILL",
      "stop_container": true,
      "clear_web_cron": true,
      "rebuild_from": "golden_path_manifest",
      "inject_version_labels": true
